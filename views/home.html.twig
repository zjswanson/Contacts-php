<html>
<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>Contact List</title>
</head>
<body>
    <div class='container'>
        <div class='well'>
            <h1>Contact List</h1>
        </div>
        <div class='row'>
            <div class='col-md-5'>
                <form action='/create' method='post'>
                    <div class='form-group'>
                        <label for='contact-name'>Enter Contact Name:</label>
                        <input type='text' name='contact-name' class='form-control'>
                    </div>
                    <div class='form-group'>
                        <label for='phone'>Enter Contact Phone Number:</label>
                        <input type='text' name='phone' class='form-control'>
                    </div>
                    <div class='form-group'>
                        <label for='address'>Enter Contact Address:</label>
                        <input type='text' name='address' class='form-control'>
                    </div>
                    <button type='submit'>Create Contact</button>
                </form>
            </div>
            <div class='col-md-7'>
                <h1>Your Contacts:</h1>
                <ul>
                    {% if contacts is not empty %}
                        {% for contact in contacts %}
                        <li> {{contact.getContactName}} </li>
                        <ul>
                            <li> {{contact.getPhone}} </li>
                            <li> {{contact.getAddress}} </li>
                        </ul>
                        {% endfor %}
                    {% endif %}
                </ul>
            </div>

        </div>




    </div>
</body>
</html>
